{% if amenities %}
    <div class="row">
        <div class="span6">
            <h2>{{ wp.__('设施', 'aviators') }}</h2>

            <div class="row">
                {% for column in amenities %}
                    <ul class="span2">
                        {% for amenity in column %}
							{% if wp.has_term(amenity.term_id, 'amenities', post.ID) %}
                            	<li class="{% if wp.has_term(amenity.term_id, 'amenities', post.ID) %}checked{% else %}plain{% endif %}">{{ amenity.name }}</li>
                        	{% endif %}
                        {% endfor %}
                    </ul><!-- /.span2 -->
                {% endfor %}
            </div><!-- /.row -->
        </div><!-- /.span12 -->
    </div><!-- /.row -->
{% endif %}