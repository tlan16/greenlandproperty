{% extends 'layout.twig' %}

{% block content %}
    <h1 class="page-header">{{ wp.__('Agents', 'aviators') }}</h1>

    <div class="our-agents-large">
        <div class="row-fluid">
            {% if wp.have_posts() %}
                {% for post in posts %}
                    {{ wp_query.the_post() }}
                    {{ wp.get_template_part('content-agent', wp.get_post_format()) }}
                    
                    {% if loop.index % 4  == 0 %}
                        </div><div class="row-fluid">
                    {% endif %}                    
                {% endfor %}
            {% else %}
                {{ wp.get_template_part('content', 'none') }}
            {% endif %}
        </div>
    </div><!-- /.our-agents-large -->

    {{ wp.aviators_paging_nav() }}
{% endblock %}